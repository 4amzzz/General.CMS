
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - 管理后台</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="author" content="Lio.Huang">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/css/account/login.css" rel="stylesheet" />
    <style>
        .col {
            margin: 200px 0px 10px 0px;
        }

        .title {
            text-align: center;
            font-size: 30px;
            color: #e40a0a
        }

        .skip {
            clear: both;
            padding-left: 90px;
        }

            .skip p {
                float: left;
                font-size: 15px;
                color: #ffffff
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <div class="row">
                <div class="col-md-12 col" >
                    <p class="title">
                        很抱歉，您的访问被拒绝
                    </p> 
                    <div class="skip">
                        <p id="countdown">
                        </p>
                        <p>秒后自动跳转到</p>
                        <a href="/Account/Login" id="loginBtn"><p style="color:red">登录页</p></a> 
                    </div>
                   
                </div>  
            </div>  
        </div>
        <div class="row footer">
            <div class="col-md-12">
                <p class="copyright">
                    <script>document.write(new Date().getFullYear());</script> Banana科技股份公司 - Colorlib All rights reserved
                </p>
            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script> 

    <script>
        var len = 5; 
        var time = setInterval(function () {
            $("#countdown").text(len);  
            len = len - 1;
            if (len == 0) {
                $("#loginBtn>p").trigger('click');
                clearInterval(time);
            }
        }, 1000);   
        $(document).ready(function () {
            if (window != top) {
                top.location.href = location.href;
            }
        });
    </script>
</body>
</html>
